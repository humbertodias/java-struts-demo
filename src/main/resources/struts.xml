<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <constant name="struts.devMode" value="false" />
    <package name="default" extends="struts-default">
        <action name="createproduct" class="actions.CreateProduct">
            <result name="success">success.jsp</result>
            <result name="error">error.jsp</result>
        </action>
        <action name="viewproducts" class="actions.ReadProducts">
            <result name="success">products.jsp</result>
        </action>
        <action name="deleteproduct" class="actions.DeleteProduct">
            <result name="success">products.jsp</result>
        </action>
        <action name="updateproduct" class="actions.UpdateProduct">
            <result name="update">update.jsp</result>
            <result name="success">success.jsp</result>
            <result name="error">error.jsp</result>
        </action>
    </package>
</struts> 
